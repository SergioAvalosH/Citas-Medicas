<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_managmentProfiles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_gradient"
    tools:context=".view.ui.fragments.GestionPerfiles">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/poppins_light"
                android:gravity="center_horizontal"
                android:text="@string/title_menu_profiles"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableTop="@drawable/ic_managment_profiles"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/lbl_btn_edit_profile"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="#5E71E3"
                tools:ignore="ButtonStyle,RtlHardcoded" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="15dp"
                android:drawableTop="@drawable/ic_managment_profiles"
                android:fontFamily="@font/poppins_semibold"
                android:paddingTop="10dp"
                android:text="@string/lbl_btn_new_profile"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="#5E71E3"
                tools:ignore="ButtonStyle,RtlHardcoded" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>