<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuMedicoEspecialidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_gradient"
    tools:context=".view.ui.activity.MedicoEspecialidadMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginBottom="50dp"
            tools:ignore="UselessParent">

            <Button
                android:id="@+id/btn_return_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_return"
                android:text="@string/btn_return"
                app:backgroundTint="#5E71E3"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_medico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_redondo"
            android:drawableTop="@drawable/ic_baseline_personal_injury_24"
            android:text="@string/btn_doc"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingEnd="35dp"
            android:paddingRight="20dp"
            android:paddingStart="35dp"
            android:layout_marginBottom="40dp"
            app:backgroundTint="#5E71E3"
            tools:ignore="RtlSymmetry" />

        <Button
            android:id="@+id/btn_especialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_redondo"
            android:drawableTop="@drawable/ic_especialidad"
            android:text="@string/btn_esp"
            android:textSize="11sp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="25dp"
            android:paddingEnd="27dp"
            android:paddingRight="20dp"
            android:paddingStart="27dp"
            app:backgroundTint="#5E71E3"
            tools:ignore="RtlSymmetry" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>