<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/adminMenu"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".view.ui.fragments.AdminMenu"
              android:baselineAligned="false">

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/backgound_gradient"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:ignore="UselessParent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@string/title_admi_menu"
                android:textSize="50sp"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_light"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="300dp">

            <Button android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:height="135dp"
                    android:width="180dp"
                    android:drawableTop="@drawable/ic_managment_profiles"
                    android:text="@string/lbl_btn_gestionar_profiles"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="15sp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="18dp"
                    app:backgroundTint="#5E71E3"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="ButtonStyle"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:height="135dp"
                    android:width="180dp"
                    android:drawableTop="@drawable/ic_managment_medical"
                    android:text="@string/lbl_btn_gestionar_med_espec"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="15dp"
                    app:backgroundTint="#5E71E3"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="ButtonStyle"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="450dp">

            <Button android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:height="130dp"
                    android:width="180dp"
                    android:drawableTop="@drawable/ic_managment_citas"
                    android:text="@string/lbl_btn_gestionar_citas"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="18dp"
                    app:backgroundTint="#5E71E3"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="ButtonStyle"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:height="100dp"
                    android:width="180dp"
                    android:drawableTop="@drawable/ic_logout"
                    android:text="@string/lbl_btn_logout"
                    android:paddingTop="15dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginStart="15dp"
                    app:backgroundTint="#5E71E3"
                    android:fontFamily="@font/poppins_semibold"
                    tools:ignore="ButtonStyle"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>